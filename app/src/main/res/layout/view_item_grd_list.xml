<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_grd_lis_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_grd_lis_tilte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/tilte"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/item_grd_lis_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥79"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/item_grd_lis_oprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:text="￥128"
                android:textColor="@color/bgColor_overlay"
                android:textSize="13sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/item_grd_lis_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.1"
                android:textSize="13sp"
                android:textColor="@color/bgColor_overlay"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:textSize="13sp"
                android:textColor="@color/bgColor_overlay"
                />

            <TextView
                android:id="@+id/item_grd_lis_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_weight="1"
                android:text="已售5件"
                android:textSize="13sp"
                android:textColor="@color/bgColor_overlay"
                />

            <TextView
                android:id="@+id/item_grd_lis_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="包邮"
                android:textSize="13sp"
                android:textColor="@android:color/holo_red_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
