<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/host_on"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/frm_class_sousou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_fillet"
            android:drawableLeft="@mipmap/iconfont_sousuo_h"
            android:gravity="center_vertical"
            android:drawablePadding="3dp"
            android:padding="5dp"
            android:text="@string/souso_h"
            android:textColor="@color/sousouf" />
    </LinearLayout>

    <GridView
        android:id="@+id/frm_class_grd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"

        />
</LinearLayout>